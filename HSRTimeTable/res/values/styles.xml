<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="row_cell">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="row_cell_small" parent="row_cell">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>
    <style name="row_cell_medium" parent="row_cell">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    <style name="row_cell_small_emphasis" parent="row_cell_small">
		<item name="android:textStyle">italic</item>
    </style>
    <style name="footer">
		<item name="android:padding">4dp</item>
		<item name="android:background">@android:color/background_dark</item>
    </style>
    <style name="footerText">
        <item name="android:textColor">@android:color/secondary_text_dark</item>
		<item name="android:textStyle">italic</item>
		<item name="android:paddingRight">4sp</item>
    </style>
    <style name="footerLabel" parent="footerText">
		<item name="android:textStyle">bold</item>
    </style>
    <style name="about_text">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="about_title" parent="about_text">
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
